page {
  background-color: #eee;
}

.edit {
  display: block;
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  right: 25rpx;
  bottom: 25rpx;
  z-index: 50;
}

.top-tab {
  display: -webkit-flex;
  -webkit-flex-flow: row;
  -webkit-align-items: stretch;
  -webkit-justify-content: space-between;
  display: -ms-flex;
  -ms-flex-flow: row wrap;
  -ms-align-items: stretch;
  -ms-justify-content: space-between;
  display: flex;
  flex-flow: row;
  align-items: stretch;
  justify-content: space-between;
  background-color: #fff;
  width: 100%;
  text-align: center;
}

.top-tab .item {
  -webkit-flex: 1;
  -moz-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
}

.top-tab .item:after {
  content: '';
  width: 1px;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
  background-color: #e5e5e5;
}

.top-tab .item:last-child:after {
  opacity: 0;
}

.top-tab .item.color1 {
  color: #9badd3;
}

.top-tab .item picker {
  width: 100%;
}

.top-tab image {
  display: inline-block;
  width: 14rpx;
  height: 15rpx;
}

.listbox {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}

.listbox .item {
  display: -webkit-flex;
  -webkit-flex-flow: row;
  -webkit-align-items: stretch;
  -webkit-justify-content: space-between;
  display: -ms-flex;
  -ms-flex-flow: row wrap;
  -ms-align-items: stretch;
  -ms-justify-content: space-between;
  display: flex;
  flex-flow: row;
  align-items: stretch;
  justify-content: space-between;
  background-color: #fff;
}

.listbox .item.p20 {
  padding: 20rpx;
}

.listbox .item-box {
  background-color: #fff;
  margin-top: 1px;
}

.listbox .item .tx {
  -webkit-flex: 1;
  -moz-flex: 1;
  flex: 1;
}

.listbox .item .tx image {
  display: block;
  width: 74rpx;
  height: 74rpx;
  border-radius: 74rpx;
}

.listbox .item .info {
  -webkit-flex: 6;
  -moz-flex: 6;
  flex: 6;
}

.listbox .item .info .info1 {
  overflow: hidden;
}

.listbox .item .info .info1 .name {
  float: left;
  font-size: 28rpx;
  color: #9badd3;
}

.listbox .item .info .info1 .time {
  float: right;
  font-size: 24rpx;
  color: #6b7886;
}

.listbox .item .info .sub-text {
  font-size: 22rpx;
  color: #010101;
  padding-top: 10rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden;
}

.listbox .item .info .titt .tip {
  display: inline-block;
  font-size: 20rpx;
  color: #010101;
  background-color: #fdd519;
  padding: 5rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.listbox .item .info .titt text {
  font-size: 22rpx;
  font-weight: bold;
}

.s-tu {
  overflow: hidden;
  margin-top: 20rpx;
  position: relative;
  height: 0rpx;
  margin-bottom: 0rpx;
}

.s-tu .tou {
  display: block;
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  height: 60rpx;
  z-index: 20;
  background: -webkit-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)); /* Firefox 3.6 - 15 */
  background: linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 1)); /* 标准的语法 */
}

.s-tu .item {
  width: 32%;
  float: left;
  padding: 0;
  margin-right: 1.3%;
}

.s-tu .item:last-child {
  margin-right: 0;
}

.s-tu .item image {
  width: 100%;
  height: 150rpx;
  display: block;
}

.listbox .item .info .more {
  text-align: center;
  font-size: 22rpx;
  color: #9badd3;
}

.t-icon .icon-item {
  display: inline-block;
  font-size: 22rpx;
  color: #9badd3;
  height: 31rpx;
  line-height: 31rpx;
  margin-right: 20rpx;
}

.t-icon .icon-item image {
  display: inline-block;
  width: 31rpx;
  margin-bottom: -4rpx;
  height: 31rpx;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
